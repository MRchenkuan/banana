{
  "name": "banana-chat",
  "version": "1.0.0",
  "description": "Banana AI Chat Application",
  "scripts": {
    "dev": "docker compose up -d mysql && concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "dev:docker": "docker compose up",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "docker:build": "docker compose -f docker-compose.build.yml build",
    "docker:build:frontend": "docker compose -f docker-compose.build.yml build frontend",
    "docker:build:backend": "docker compose -f docker-compose.build.yml build backend",
    "docker:build:clean": "docker compose -f docker-compose.build.yml build --no-cache",
    "docker:build:frontend-clean": "docker compose -f docker-compose.build.yml build --no-cache frontend",
    "docker:build:backend-clean": "docker compose -f docker-compose.build.yml build --no-cache backend",
    "db:up": "docker compose up -d mysql",
    "db:down": "docker compose stop mysql",
    "db:restart": "docker compose restart mysql",
    "db:logs": "docker compose logs -f mysql",
    "db:connect": "./scripts/mysql-connect.sh",
    "db:reset": "./scripts/mysql-reset.sh",
    "docker:export": "./scripts/docker-export.sh",
    "docker:import": "./scripts/docker-import.sh",
    "clean": "npm run clean:docker && npm run clean:node",
    "clean:docker": "docker system prune -f",
    "clean:node": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "clean:build": "rm -rf frontend/build backend/dist",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "start": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "start:prod": "npm run build && npm start",
    "stop": "docker compose down",
    "logs:frontend": "docker compose logs -f frontend",
    "logs:backend": "docker compose logs -f backend",
    "logs:mysql": "docker compose logs -f mysql",
    "status": "docker compose ps && docker compose images"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "@google/genai": "^1.17.0",
    "dotenv": "^17.2.2",
    "sharp": "^0.34.3"
  }
}
